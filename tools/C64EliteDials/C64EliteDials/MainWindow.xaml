<Window x:Class="C64EliteDials.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C64EliteDials"
        mc:Ignorable="d"
        Title="C64 Elite Dials Bitmap Editor" Height="450" Width="800" KeyDown="Window_KeyDown" WindowStartupLocation="CenterScreen">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="291*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image x:Name="myImage" Grid.Row="0" RenderOptions.BitmapScalingMode="NearestNeighbor" Grid.ColumnSpan="2" Margin="0,0,0,43" Grid.RowSpan="3" />
        <TextBlock Grid.Row="2" FontSize="16" TextWrapping="Wrap" Text="Cursor Keys - Move, Enter - Clear pixel, 1/2/3 - Set pixel color, S - Save" Grid.ColumnSpan="2" Margin="0,21,0,21"/>
        <TextBlock Grid.Row="2" FontSize="16" TextWrapping="Wrap" Text="Copy C.CODIALS.bin as C.CODIALSNEW.bin next to this program for editing." Grid.ColumnSpan="2" Margin="0,43,0,0"/>
    </Grid>
</Window>
